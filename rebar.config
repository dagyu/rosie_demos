{minimum_otp_vsn, "23.3"}.
{erl_opts, [debug_info]}.

{deps, [
    {rosie_dds, "*.", {git, "https://github.com/rosie-project/rosie_dds.git", {branch, "main"}}},
    {rosie_rclerl, "*.",
        {git, "https://github.com/rosie-project/rosie_rclerl.git", {branch, "main"}}},
    {example_interfaces, {ros2, galactic}},
    {std_msgs, {ros2, galactic}},
    {geometry_msgs, {ros2, galactic}},
    {rosie_demos_msgs, {ros2, local}}
]}.

{project_app_dirs, ["demos/*"]}.

{relx, [
    {release, {talker, "0.0.1"}, [talker]},
    {release, {listener, "0.1.0"}, [listener]},
    {release, {counter_action_server, "0.1.0"}, [counter_action_server]},
    % {sys_config, "./config/sys.config"},
    % {vm_args, "./config/vm.args"},
    {dev_mode, false},
    {include_erts, false},
    {extended_start_script, true}
]}.

{plugins, [
    erlfmt,
    {rosie_ros2_deps, "*.",
        {git, "https://github.com/rosie-project/rosie_ros2_deps.git", {branch, "master"}}},
    {rosie_interface_compiler, "*.",
        {git, "https://github.com/rosie-project/rosie_interface_compiler.git", {branch, "master"}}}
]}.

{provider_hooks, [
    {pre, [{compile, {rosie, compile}}]},
    {post, [{clean, {rosie, clean}}]}
]}.
